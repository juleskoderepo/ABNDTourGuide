<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style for label text view -->
    <style name="poi_label_style">
        <item name="android:layout_width">@dimen/layout_width_textview</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/layout_weight_label</item>
    </style>

    <!-- Style for label text view -->
    <style name="sp_label_style">
        <item name="android:layout_width">@dimen/layout_width_textview</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/sp_layout_weight_label</item>
    </style>

    <!-- Style for displayed text text view -->
    <style name="displaytext_style">
        <item name="android:layout_width">@dimen/layout_width_textview</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/layout_weight_displaytext</item>
    </style>

</resources>
